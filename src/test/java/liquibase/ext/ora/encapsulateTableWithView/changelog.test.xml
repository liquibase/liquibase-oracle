<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ora="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog ../../../../liquibase/ext/ora/xml/dbchangelog-3.2.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext ../../../../liquibase/ext/ora/xml/dbchangelog-ext.xsd">

    <changeSet id="1" author="artur">
        <createTable tableName="person">
            <column name="id" type="integer"/>
            <column name="name" type="varchar2(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="artur">
        <insert tableName="person">
            <column name="id">1</column>
            <column name="name">James</column>
        </insert>
    </changeSet>

    <changeSet id="3" author="artur">
        <ora:encapsulateTableWithView tableName="person"/>
    </changeSet>

</databaseChangeLog>